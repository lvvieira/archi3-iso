#!/usr/bin/env bash

echo "Preparing installation...."
git clone https://github.com/lvvieira/arch-linux-i3.git arch-linux-i3 &> /dev/null

if [[ ! -d /root/arch-linux-i3 ]]; then

  for i in 1 2 3 4 5 6 7 8 9; do
  
  echo "Failed to git clone"
  echo "Retrying $i out of 9 ...."
  echo "Preparing installation...."
  git clone https://github.com/lvvieira/arch-linux-i3.git &> /dev/null
  
  [[ -d /root/arch-linux-i3 ]] && chmod +x /root/arch-linux-i3/archinstall-UEFI.in && /root/arch-linux-i3/archinstall-UEFI.in -o 1
  
 done
 
else

  chmod +x /root/arch-linux-i3/archinstall-UEFI.in
  /root/arch-linux-i3/archinstall-UEFI.in -o 1
  
fi
